<div class="text-center">
  <h3>アカウント情報の変更</h3>

  <%= form_for(@trainer, url: update_profile_trainer_path, html: { method: :put }) do |f| %>
    <%= render "trainers/shared/error_messages", resource: @trainer %>

    <div>
      <%= image_tag @trainer.avatar.variant(gravity: :center, resize:"200x200^", crop:"200x200+0+0"), class: "avatar_image" %>
    </div>

    <div class="field">
      <%= f.label :avatar %><br />
      <%= f.file_field :avatar, autocomplete: "avatar", onchange: "loadAvatar(this);" %>
    </div>

    <div id="update_avatar" style="display: none;">
      <p id="preview"></p>
    </div>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :age %><br />
      <%= f.number_field :age, min: 1, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :gender %><br />
      <%= f.select :gender, Trainer.genders.keys.map {|k| [k, k]}, { include_blank: true } ,autocomplete: "gender" %>
    </div>

    <div class="field">
      <%= f.label :timeframe %><br />
      <%= f.text_area :timeframe, autocomplete: "timeframe" %>
    </div>

    <div class="field">
      <%= f.label :introduction %><br />
      <%= f.text_area :introduction, autocomplete: "introduction" %>
    </div>

    <div class="field">
      <%= f.label :min_fee %><br />
      <%= f.number_field :min_fee, autocomplete: "min_fee" %>円以上
    </div>

    <div class="field">
      <%= f.label :max_fee %><br />
      <%= f.number_field :max_fee, autocomplete: "max_fee" %>円以下
    </div>

    <div class="field">
      <%= f.label :instruction_period %><br />
      <%= f.select :instruction_period, Trainer.instruction_periods.keys.map {|k| [k, k]}, { include_blank: true } ,autocomplete: "gender" %>
    </div>

    <div class="actions">
      <%= f.submit "更新", class: "btn btn-outline-primary btn-lg" %>
    </div>
  <% end %>

  <%= link_to "Back", :back %><br />

  <%= link_to "トップページ", root_path %>
</div>

<!-- プロフィール画像のプレビューをするjs -->
<%= render "shared/preview"%>
