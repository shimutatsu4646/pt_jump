<div class="text-center">
  <h3>トレーナー登録</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "trainees/shared/error_messages", resource: resource %>

    <div class="row row-cols-1 row-cols-md-2 m-2">
      <div class="field col p-2">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="field col p-2">
        <%= f.label :age %><br />
        <%= f.number_field :age, min: 1, autocomplete: "age", class: "form-control" %>
      </div>

      <div class="field col p-2">
        <%= f.label :gender %><br />
        <%= f.select :gender, Trainee.genders.keys.map {|k| [I18n.t("enums.trainer.gender.#{k}"), k]}, { include_blank: true } ,autocomplete: "gender", class: "form-control" %>
      </div>

      <div class="field col p-2">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field col p-2">
        <%= f.label :password %><br>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em><br>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field col p-2">
        <%= f.label :password_confirmation %><br />
        <em>(「パスワード」と同じ文字を入力してください)</em><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "登録", class: "btn btn-outline-primary btn-lg" %>
    </div>
  <% end %>

  <%= render "trainees/shared/links" %>
</div>
