<div class="text-center">
  <h3>アカウント情報の変更</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "trainees/shared/error_messages", resource: resource %>

    <div>
      <%= image_tag resource.avatar.variant(resize_to_fill:[200, 200]), class: "avatar_image" %>
    </div>

    <div class="row row-cols-1 m-2 account-form mx-5 px-5">
      <div class="field col p-2">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class:"form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field col p-2">
        <%= f.label :password %><br>
        <i>(パスワードを変更しない場合は入力しないでください)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> 文字以上</em>
        <% end %>
      </div>

      <div class="field col p-2">
        <%= f.label :password_confirmation %><br />
        <i>(パスワードを変更しない場合は入力しないでください)</i><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>

      <div class="field col p-2">
        <%= f.label :current_password %> <i>(必須項目)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "更新", class: "btn btn-outline-primary btn-lg" %>
    </div>
  <% end %>

  <%= link_to "前のページに戻る", :back %><br />

  <div class="bg-secondary text-white m-5 p-4">
    <p class="">退会する方は以下のボタンをクリックしてください</p>

    <%= button_to "退会する", registration_path(resource_name), data: { confirm: "これまでに活動した全てのデータが削除されます。本当に削除してよろしいですか？" }, method: :delete, class: "btn btn-danger" %>
  </div>
</div>
