<div class="text-center">
  <h3>トレーニー登録</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "trainees/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :age %><br />
      <%= f.number_field :age, min: 1, autocomplete: "age" %>
    </div>

    <div class="field">
      <%= f.label :gender %><br />
      <%= f.select :gender, Trainee.genders.keys.map {|k| [k, k]}, { include_blank: true } ,autocomplete: "gender" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

  <div class="field">
      <%= f.label :dm_allowed %><br />
      <%= f.check_box :dm_allowed, autocomplete: "dm_allowed" %>
    </div>

    <div class="actions">
      <%= f.submit "登録", class: "btn btn-outline-primary btn-lg" %>
    </div>
  <% end %>

  <%= render "trainees/shared/links" %>
</div>
