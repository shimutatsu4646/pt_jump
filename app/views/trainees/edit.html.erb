<div class="text-center">
  <h3>アカウント情報の変更</h3>

  <%= form_for(@trainee, url: update_profile_trainee_path, html: { method: :put }) do |f| %>
    <%= render "trainees/shared/error_messages", resource: @trainee %>

    <div>
      <%= image_tag @trainee.avatar.variant(gravity: :center, resize:"200x200^", crop:"200x200+0+0"), class: "avatar_image" %>
    </div>

    <div class="field">
      <%= f.label :avatar %><br />
      <%= f.file_field :avatar, autocomplete: "avatar", onchange: "loadAvatar(this);" %>
    </div>

    <div id="update_avatar" style="display: none;">
      <p id="preview"></p>
    </div>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :age %><br />
      <%= f.number_field :age, min: 1, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :gender %><br />
      <%= f.select :gender, Trainee.genders_i18n.keys.map {|k| [I18n.t("enums.trainee.gender.#{k}"), k]}, { include_blank: true } ,autocomplete: "gender" %>
    </div>

    <div class="field">
      <%= f.label :timeframe %><br />
      <%= f.text_area :timeframe, autocomplete: "timeframe" %>
    </div>

    <div class="field">
      <%= f.label :introduction %><br />
      <%= f.text_area :introduction, autocomplete: "introduction" %>
    </div>

    <div class="field">
      <%= f.label :dm_allowed %><br />
      <%= f.check_box :dm_allowed, autocomplete: "dm_allowed" %>
    </div>

    <div class="actions">
      <%= f.submit "更新", class: "btn btn-outline-primary btn-lg" %>
    </div>
  <% end %>

  <%= link_to "Back", :back %><br />

  <%= link_to "トップページ", root_path %>
</div>

<!-- プロフィール画像のプレビューをするjs -->
<%= render "shared/preview"%>
