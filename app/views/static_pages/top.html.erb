<h1>トップページ</h1>
<% if trainee_signed_in? %>
  <h2>ログイン:<%= current_trainee.name %></h2>
<% else %>
  <h2>ログインしていません</h2>
<% end %>

<% unless trainee_signed_in?  %>
  <p><%= link_to 'sign_up', new_trainee_registration_path %></p>
<% end %>

<% unless trainee_signed_in?  %>
  <p><%= link_to 'sign_in', new_trainee_session_path %></p>
<% end %>

<% if trainee_signed_in? %>
  <p><%= link_to 'sign_out', destroy_trainee_session_path, method: :delete %></p>
<% end %>

<% @trainees.each do |trainee| %>
  <p>トレーニー情報</p>
  <p><%= trainee.name %></p>
  <p><%= trainee.age %></p>
  <p><%= trainee.gender %></p>
  <p><%= trainee.email %></p>
  <p><%= link_to 'プロフィール', trainee_path(trainee) %></p>
<% end %>
