<h1>トップページ</h1>
<% if trainee_signed_in? %>
  <h2><%= current_trainee.name %></h2>
<% end %>

<% unless trainee_signed_in?  %>
  <p><%= link_to 'sign_up', new_trainee_registration_path %></p>
<% end %>

<% unless trainee_signed_in?  %>
  <p><%= link_to 'sign_in', new_trainee_session_path %></p>
<% end %>

<% if trainee_signed_in? %>
  <p><%= link_to 'sign_out', destroy_trainee_session_path, method: :delete %></p>
<% end %>
